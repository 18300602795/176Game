<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.i76game">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--下载页面-->
        <activity android:name=".activity.DownloadActivity" />
        <!--游戏详情页面-->
        <activity android:name=".activity.GameContentActivity" />
        <!--游戏详情页面-->
        <activity android:name=".activity.GameInfoActivity" />
        <!--游戏列表页面-->
        <activity android:name=".activity.GameListActivity" />
        <!--圆形页面-->
        <activity
            android:name=".activity.CircleMenuActivity"
            android:theme="@style/Transparent" />
        <!--登陆页面-->
        <activity android:name=".activity.LoginActivity" />
        <!--资讯页面-->
        <activity android:name=".activity.InformationActivity" />
        <!--返利界面-->
        <activity android:name=".activity.BackActivity" />
        <!--资讯详情页面-->
        <activity android:name=".activity.InformationContentActivity" />
        <!--注册界面-->
        <activity android:name=".activity.UserRegisterActivity" />
        <!--搜索页面-->
        <activity android:name=".activity.SearchActivity" />
        <!--帮助页面-->
        <activity android:name=".activity.HelpActivity" />
        <!--客服页面-->
        <activity android:name=".activity.CustomerServiceActivity" />
        <!--我的礼包-->
        <activity android:name=".activity.UserGiftActivity" />
        <!--设置中心-->
        <activity android:name=".activity.SettingActivity" />
        <!--帐号安全-->
        <activity android:name=".activity.AccountSecurityActivity" />
        <!--货币明细-->
        <activity android:name=".activity.OrderActivity" />
        <!--礼包中心-->
        <activity android:name=".activity.GiftListActivity" />


        <!--支付页面-->
        <activity
            android:name=".activity.RechargeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind" />

        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>

        <activity
            android:name=".pay.AlipayActivityForWap"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!--游戏大图-->
        <activity
            android:name=".activity.ImagePagerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <!--游戏大图-->
        <!--更新升级的服务-->
        <service android:name=".update.VersionUpdateService" />
        <!--下载的服务-->
        <service android:name=".download.DownloadService">
            <intent-filter>
                <action android:name="download.service.action" />
            </intent-filter>
        </service>
        <receiver android:name=".download.AppInstallReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>
    </application>
</manifest>