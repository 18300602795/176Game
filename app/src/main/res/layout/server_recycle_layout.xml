<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/table_recycle_card">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/table_recycle_icon"
                android:layout_width="60dp"
                android:transitionName="@string/share_img"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:id="@+id/table_recycle_game_name"
                    android:text="九州屠龙"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="21区"
                    android:textSize="14sp"
                    android:layout_marginRight="13dp"
                    android:id="@+id/table_recycle_area"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/table_recycle_data"
                    android:text="05-10 10:00" />


            </LinearLayout>

            <Button
                android:id="@+id/table_recycle_state"
                android:layout_width="55dp"
                android:text="查看"
                android:layout_gravity="center_vertical"
                android:textColor="@color/server_btn_color"
                android:background="@drawable/server_btn_bg"
                android:layout_height="30dp"/>

        </LinearLayout>

</android.support.v7.widget.CardView>

