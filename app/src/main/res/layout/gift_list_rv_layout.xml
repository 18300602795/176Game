<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="62dp">

    <ImageView
        android:id="@+id/gift_list_rv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/gift_list_rv_name"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_item_text_color"
            android:text="新手礼包"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/gift_list_rv_length"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="剩余：26"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="7dp"
                android:progress="50"
                android:id="@+id/gift_list_rv_progress"/>
            <TextView
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/gift_list_rv_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
    <Button
        android:text="领取"
        android:background="@drawable/customer_service_btn_bg"
        android:textColor="@color/white"
        android:id="@+id/gift_list_rv_get"
        android:layout_gravity="center_vertical"
        android:layout_width="45dp"
        android:layout_height="30dp"/>

</LinearLayout>