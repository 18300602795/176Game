<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/mine_rv_item"
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_height="45dp">

        <ImageView
            android:id="@+id/mine_rv_image"
            android:layout_width="27dp"
            android:layout_gravity="center_vertical"
            android:layout_height="27dp"/>

        <TextView
            android:id="@+id/mine_rv_title"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/main_item_text_color"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#98979c"
            android:layout_marginRight="10dp"
            android:id="@+id/mine_rv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_arrow_right"
            android:layout_height="15dp"/>

        <View
            android:id="@+id/mine_rv_space"
            android:background="#cfcdcd"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
</LinearLayout>